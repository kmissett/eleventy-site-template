---
pageID: "blog"
pageTitle: "Blog"
contentType: "page"
pagination:
  data: collections.publicPosts
  size: 3
  reverse: true
permalink: "blog/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber + 1}}{% endif %}/"
paginationPrevText: 'Newer posts'
paginationNextText: 'Older posts'
paginationAnchor: 'post-list'
---

{% for post in pagination.items %}
<article class="home-page-article">
	<h2 class="post-title"><a href="{{ post.url }}">{{ post.data.pageTitle }}</a></h2>
	<p class="post-excerpt">{{ post.data.excerpt }}</p>
</article>
{% endfor %}

{% if pagination.href.previous or pagination.href.next %}
<nav class="page-navigation-controls" id="{{paginationAnchor}}" aria-label="Posts">
{% if pagination.href.previous %}<a class="post-navigation posts-previous" href="{{ pagination.href.previous }}">{{ paginationPrevText }}</a>{% endif %}
{% if pagination.href.next %}<a class="post-navigation posts-next" href="{{ pagination.href.next }}">{{ paginationNextText }}</a>{% endif %}
</nav>
{% endif %}